.container
  .row
    .col-md-12
      %table.table
        %thead
          %tr
            %th Title
            %th Price
        %tbody
          - @books.each do |book|
            %tr
              %td
                %h4
                  = link_to book.title, book
              %td
                %h4
                  = number_to_currency(book.price)
  .row
    .text-center
      = paginate @books
