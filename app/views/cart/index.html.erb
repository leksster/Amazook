<!-- Page Content -->
<div class="container">

    <div class="row">

        <div class="col-md-12">

            <div class="thumbnail">
                <div class="caption-full">
                  <% if @books.nil? %>
                    <%= @empty %>
                  <% else %>
                    <table class="table table-hover">
                        <tbody>
                            <thead>
                                <th>Book</th>
                                <th>Price</th>
                                <th>Qty</th>
                                <th>Total</th>
                            </thead>
                          <% @books.each do |book| %>
                              <tr>
                                  <td>
                                      <%= book.title %>
                                  </td>
                                  <td>
                                      $<%= book.price %>
                                  </td>
                                  <td>
                                      <%= session[:cart][book.id.to_s] %>
                                  </td>
                                  <td>
                                      price
                                  </td>
                              </tr>
                          <% end %>

                          <% end %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>

</div>
<!-- /.container -->