.container
  .row
    .col-md-12
      .thumbnail
        .caption-full
          = form_tag("cart/update", method: 'post') do
            - if @books.nil?
              = @empty          
            - else
              %table.table.table-hover
                %thead
                  %th.col-md-1
                    Cover
                  %th.col-md-4
                    Book
                  %th.col-md-4
                    Price
                  %th.col-md-1
                    Qty
                  %th.col-md-2
                    Total
                  %th.col-md-1
                %tbody                
                  - @books.each do |book|
                    %tr
                      %td
                        %img{src: "#{asset_path(book.img)}"}
                      %td
                        = book.title
                      %td
                        = book.price
                      %td
                        = hidden_field_tag :book_id, book.id
                        = number_field_tag :qty, "#{session[:cart][book.id.to_s]}", class: 'form-control', min: '1', max: '99', :id => book.id.to_s
                      %td
                        $#{book.price * session[:cart][book.id.to_s]}
                      %td
                        = link_to 'X', {:controller => 'cart', :action => 'destroy', :id => book.id.to_s}, class: 'btn btn-danger btn-xs', method: :post
                  %tr
                    %td{colspan: 3}
                    %td
                      %p.text-right
                        %strong
                          Subtotal
                    %td
                      $#{@subtotal}
                    %td
              .row
                .col-xs-6
                  = link_to 'Empty cart', {:controller => 'cart', :action => 'clear'}, class: 'btn btn-primary', method: :post
                  = link_to 'Continue shopping', home_index_path, class: 'btn btn-primary'
                .col-xs-6.text-right
                  = submit_tag 'Update', class: 'btn btn-primary'
                  = link_to 'Checkout', cart_checkout_path, method: :post, class: 'btn btn-primary'