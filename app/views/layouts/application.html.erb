<!DOCTYPE html>
<html>
<head>
  <title>Bookstore</title>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    'custom', 'bootstrap', 'shop-homepage', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'jquery', 'bootstrap', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= csrf_meta_tags %>
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to t('title'), '/', class: "navbar-brand" %>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <%= link_to 'Authors', authors_path %></a>
                    </li>
                    <li>
                        <%= link_to 'Books', books_path %>
                    </li>
                    <li>
                        <a href="#">Contact</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  <li>
                    <%= link_to "Cart", cart_path %>
                  </li>

                  <% if signed_in? %>
                    <li><p class="navbar-text">Signed in as <%= link_to current_user.firstname, '#' %></p></li>
                    <li><%= link_to 'Log out', destroy_user_session_path, :method => :delete %></li>
                  <% else %>
                    <li><%= link_to 'Sign up', new_user_registration_path %></li>
                    <li><%= link_to 'Sign in', user_session_path %></li>
                  <% end %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

<div class="container">
  <% flash.each do |type, content| %>
      <% if content.respond_to?('each') 
          content.each do |item| %>
              <%= render 'layouts/alert', 
                  type: type,
                  content: item %>
          <% end %>
      <% else %>
          <%= render 'layouts/alert', 
                  type: type,
                  content: content %>
      <% end %>

  <% end %>
</div>


<%= yield %>

<div class="container">

  <hr>

  <!-- Footer -->
  <footer class="footer">
      <div class="row">
          <div class="col-lg-12 text-center">
              <p>Copyright &copy; <%= Time.now.year %></p>
          </div>
      </div>
  </footer>

</div>

</body>
</html>
