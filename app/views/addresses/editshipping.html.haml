.container
  .row.text-center
    %h2.text-center
      Checkout
    .btn-group.btn-group-lg{role: "group"}
      = link_to 'Address', '#', :class => "btn btn-primary"
      = link_to 'Delivery', '#', :class => "btn btn-default"
      = link_to 'Payment', '#', :class => "btn btn-default"
      = link_to 'Confirm', '#', :class => "btn btn-default"
      = link_to 'Complete', '#', :class => "btn btn-default"

    .row
      = form_for @address, url: {controller: "addresses", action: "update"}, method: :patch  do |f|
        .col-md-4.col-sm-4
          %h2
            Billing Address  
          - if @address.errors.any?
            #error_explanation.alert.alert-danger
              %h4= "#{pluralize(@address.errors.count, "error")} prohibited this order from being saved:"
              %ul
                - @address.errors.full_messages.each do |msg|
                  %li= msg
          .form-group
            = f.label :address
            = f.text_field :address, class: 'form-control', disabled: 'true'
          .form-group
            = f.label :zipcode
            = f.text_field :zipcode, class: 'form-control', disabled: 'true'
          .form-group
            = f.label :city
            = f.text_field :city, class: 'form-control', disabled: 'true'
          .form-group
            = f.label :phone
            = f.text_field :phone, class: 'form-control', disabled: 'true'
          .form-group
            = f.label :country
            = f.collection_select :country, Country.order(:name), :id, :name, {}, {class: 'form-control', disabled: 'true'}
      .col-md-4.col-sm-4.text-center
        %h2
          Shipping Address 
        = form_for @shipping_address, url: { controller: "addresses", action: "addshipping" }, method: :post do |ship|
          - if @shipping_address.errors.any?
            #error_explanation.alert.alert-danger
              %h4= "#{pluralize(@shipping_address.errors.count, "error")} prohibited this order from being saved:"
              %ul
                - @shipping_address.errors.full_messages.each do |msg|
                  %li= msg
          .form-group
            = ship.label :address
            = ship.text_field :address, class: 'form-control'
          .form-group
            = ship.label :zipcode
            = ship.text_field :zipcode, class: 'form-control'
          .form-group
            = ship.label :city
            = ship.text_field :city, class: 'form-control'
          .form-group
            = ship.label :phone
            = ship.text_field :phone, class: 'form-control'
          .form-group
            = ship.label :country
            = ship.collection_select :country, Country.order(:name), :id, :name, {}, {class: 'form-control'}
          .actions
            .col-md-6
              = link_to 'Back', edit_user_order_address_path, class: 'btn btn-default btn-block'
            .col-md-6
              = ship.submit 'Continue', class: 'btn btn-success btn-block'
      .col-md-4.col-sm-4.text-center
        %h2
          Order Summary
        = render 'orders/summary'
    .row
      .col-md-4.col-sm-4.actions
