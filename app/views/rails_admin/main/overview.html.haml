.row
  .col-sm-6
    .panel.panel-yellow
      .panel-heading
        .row
          .col-xs-3
            %i.fa.fa-shopping-cart.fa-5x
          .col-xs-9.text-right
            .huge 
              = Order.where(aasm_state: 'in_queue').count
            %div Orders in queue!
      %a{:href => rails_admin.index_path('order')}
        .panel-footer
          %span.pull-left View Details
          %span.pull-right
            %i.fa.fa-arrow-circle-right
          .clearfix
  .col-sm-6
    .panel.panel-primary
      .panel-heading
        .row
          .col-xs-3
            %i.fa.fa-comments.fa-5x
          .col-xs-9.text-right
            .huge
              = Rating.where(aasm_state: 'pending').count
            %div New pending reviews!
      %a{:href => rails_admin.index_path('rating')}
        .panel-footer
          %span.pull-left View Details
          %span.pull-right
            %i.fa.fa-arrow-circle-right
          .clearfix